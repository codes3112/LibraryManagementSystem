@*@{
        ViewData["Title"] = "Home";
    }*@
@*<h3>@ViewData["Title"]</h3>*@

<h4 style="text-align:center">Welcome to MyLibrary</h4>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="catalog">
                <h2 class="mdl-card__title-text homeLabel">Catalogue</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library assets.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="patrons">
                <h2 class="mdl-card__title-text homeLabel">Members</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library patron data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Patron" asp-action="Index">
                    View Members
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="branches">
                <h2 class="mdl-card__title-text homeLabel">Branches</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage MyLibrary branches.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Branch" asp-action="Index">
                    View Branches
                </a>
            </div>
        </div>
    </div>
</div>
<div class="carousel">
    <a class="carousel-item" asp-controller="Catalog" asp-action="Index"><img src="~/images//catalog.jpg"></a>
    <a class="carousel-item" asp-controller="Patron" asp-action="Index"><img src="~/images/patron2.JPG"></a>
    <a class="carousel-item" asp-controller="Branch" asp-action="Index"><img src="~/images/bldg2.jpg"></a>
</div>

        <script>
        document.addEventListener('DOMContentLoaded', function () {
                    var elems = document.querySelectorAll('.carousel');
                    var instances = M.Carousel.init(elems);
                });
                $('.carousel').carousel({
                    interval: 2000
                });
    </script> 




